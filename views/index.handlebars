
<center>
<div class="container">
    <div class="jumbotron" id="jumbotron">
        <h1>Eat-A-Burger</h1>    
    </div>
</div>
    <div class='col-md-6'>
        <div class="panel panel-default id="panel">
            <div class="panel-heading" id="panel-heading"><h3>Burger</h3></div>
            {{#each burgers}} {{#unless this.devoured}}
            <div class='list'>
                <p> {{this.burger_name}}</p>
                <form action="{{this.id}}?_method=PUT" method="POST">
                    <button type="submit" class="btn btn-success">Devour It</button>
                </form>
                </br>
            </div>
            {{/unless}} {{/each}}
        </div>
    </div>
    </div>
    <div class='col-md-6'>
        <div class="panel panel-default id="panel">
            <div class="panel-heading" id="panel-heading"><h3>Devoured</h3></div>
            <ol>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <div class='list'>
                        <p>{{this.burger_name}}</p>
                    </div>
                </li>
                {{/if}} {{/each}}
            </ol>
        </div>
    </div>
    <div class='col-md-12'>
        <div class="row">
            <div class="panel" id="custom-panel">
                <div class="panel-body" id="custom-panel-body">
                    <form method="POST" action="/create">
                        <textarea type="text" name="burger_name" cols="30" rows="5"></textarea>
                        </br>
                        </br>
                        <button type="submit" class="btn btn-success">Add A Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>
